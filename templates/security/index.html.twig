{% extends 'base.html.twig' %}

{% block title %}Hello{% endblock %}

{% block body %}
    {# templates/security/login.html.twig #}
    {# ... you will probably extend your base template, like base.html.twig #}

    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    <h1 class="h3 mb-3 font-weight-normal form-header">Please sign in</h1>
    <form class="form-signin" action="{{ path('login') }}" method="post">
        <div class="input-group">
            <div class="input-group-prepend">
                <span class="input-group-text" id="inputGroupPrepend2"><i class="material-icons">person</i></span>
            </div>
            <label for="username" class="sr-only">Username:</label>
            <input type="text" id="username" class="form-control user-login" name="_username" placeholder="Username" value="{{ last_username }}" required autofocus/>
        </div>
        <div class="input-group">
            <div class="input-group-prepend">
                <span class="input-group-text" id="inputGroupPrepend2"><i class="material-icons">lock</i></span>
            </div>
        <label for="password" class="sr-only">Password:</label>
        <input type="password" id="password" class="form-control user-password" placeholder="Password" name="_password" required/>
        </div>
        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" value="remember-me"> Remember me
            </label>
        </div>
        {#
            If you want to control the URL the user
            is redirected to on success (more details below)
            <input type="hidden" name="_target_path" value="/account" />
        #}
        <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
    </form>
{% endblock %}
